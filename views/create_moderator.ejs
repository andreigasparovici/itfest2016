<% include partials/header %>

<div class="container">
    <div class="container">
        <div class="jumbotron">
            <h2 style="text-align: center">Enter the email adress of the new moderator</h2>
            <form action="/moderator/add/<%=classid%>" method="post" id="myform">
                <input type="text" class="form-control" name="email" id="email"/>
            </form>
        </div>
    </div>
</div>
<script>
    $('#email').autocomplete({
        source: '/api/emails',
        minLength: 0,
        select: function (event, ui) {
            var email=ui.item.value;
            $("#email").val(email);
            $("#myform").submit();
        }
    }).bind('focus', function(){ $(this).autocomplete("search"); } );
</script>
