<% include partials/header %>

<div class="container">

<h1>Add a new course</h1>

<form action="/events/add" method="post" class="form-horizontal">
    <div class="form-group">
        <label class="control-label">Title:
        <input type="text" class="form-control"></label>
    </div>
    <div class="form-group">
        <label class="control-label">Description:
        <textarea class="form-control"></label>
    </div>
    <div class="form-group">
        <label class="control-label">Starting date:
        <input type="date" class="form-control"></label>
    </div>
    <div class="form-group">
        <label class="control-label">Ending date:
        <input type="date" class="form-control"></label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>

</form>

</div>